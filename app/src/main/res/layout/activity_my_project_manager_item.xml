<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_production_pic"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dimen_10dp"
    android:layout_marginRight="@dimen/dimen_10dp"
    android:layout_marginTop="@dimen/dimen_10dp"
    app:cardUseCompatPadding="false"
    app:cardPreventCornerOverlap="false"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_my_project_manager_item_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/ar_bg"/>

        <LinearLayout
            android:id="@+id/ll_my_project_manager_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_11dp"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_marginRight="@dimen/dimen_15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_my_project_manager_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="天津高铁站月台设计"
                android:textColor="#404040"
                android:textSize="@dimen/dimen_15sp" />


            <TextView
                android:id="@+id/tv_my_project_manager_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_8dp"
                android:drawableLeft="@mipmap/time"
                android:drawablePadding="@dimen/dimen_3dp"
                android:singleLine="true"
                android:text="2018.04.12"
                android:textColor="#a4a4a4"
                android:textSize="@dimen/dimen_12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_my_project_manager_item_title_english"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_6dp"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_marginRight="@dimen/dimen_15dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Tianjin rail station platform architecturel"
            android:textColor="#848383"
            android:textSize="@dimen/dimen_11sp" />

        <TextView
            android:id="@+id/tv_my_project_manager_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_6dp"
            android:layout_marginBottom="@dimen/dimen_11dp"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_marginRight="@dimen/dimen_15dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="项目简介：该项目共规划两栋高层建筑，基础形式为桩基础,该工程安全等级为II级"
            android:textColor="#848383"
            android:textSize="@dimen/dimen_11sp" />

    </LinearLayout>

</android.support.v7.widget.CardView>


