<?xml version="1.0" encoding="utf-8"?>
<com.gcyh.jiedian.widget.ScrollLinerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_110dp"
            android:paddingLeft="@dimen/dimen_15dp"
            android:paddingTop="@dimen/dimen_22dp"
            android:paddingBottom="@dimen/dimen_17dp"
            android:paddingRight="@dimen/dimen_15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_shop_car_item2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dimen_15dp"
                android:paddingLeft="@dimen/dimen_15dp"
                android:paddingBottom="@dimen/dimen_15dp"
                android:button="@drawable/selector_shop_car_cb"/>

            <ImageView
                android:id="@+id/iv_shop_car_item2_pic"
                android:layout_width="@dimen/dimen_100dp"
                android:layout_height="@dimen/dimen_70dp"
                android:src="@mipmap/jiedian_item"
                android:layout_marginRight="@dimen/dimen_15dp"
                android:background="@color/color_d6d6d6" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_shop_car_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dimen_13sp"
                    android:textColor="#00000c"
                    android:text="石膏板吊顶节点详图"/>

                <TextView
                    android:id="@+id/tv_shop_car_item_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50线币"
                    android:textSize="@dimen/dimen_15sp"
                    android:layout_marginTop="@dimen/dimen_15dp"
                    android:textColor="@color/color_de171e"/>

            </LinearLayout>

        </LinearLayout>

    <TextView
        android:id="@+id/tv_shop_car_collect"
        android:layout_width="@dimen/dimen_60dp"
        android:layout_height="match_parent"
        android:textSize="@dimen/dimen_15sp"
        android:gravity="center"
        android:text="移入\n收藏"
        android:textColor="@color/white"
        android:background="@color/color_333333"/>

    <TextView
        android:id="@+id/tv_shop_car_delete"
        android:layout_width="@dimen/dimen_55dp"
        android:layout_height="match_parent"
        android:textSize="@dimen/dimen_15sp"
        android:gravity="center"
        android:text="删除"
        android:textColor="@color/white"
        android:background="@color/color_de171e"/>

</com.gcyh.jiedian.widget.ScrollLinerLayout>