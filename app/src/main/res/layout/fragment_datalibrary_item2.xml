<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_datalibrary_item2_pic"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_120dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/library_data_item" />

        <LinearLayout
            android:id="@+id/ll_datalibrary_item2_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_5dp"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginRight="@dimen/dimen_13dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:gravity="center_vertical"
            android:layout_below="@+id/iv_datalibrary_item2_pic"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_datalibrary_item2_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="天津高铁站月台设计"
                android:textColor="#00000c"
                android:textSize="@dimen/dimen_13sp" />

            <ImageView
                android:id="@+id/iv_datalibrary_item2_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/heart" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_datalibrary_item2_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_datalibrary_item2_title"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginRight="@dimen/dimen_17dp"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="项目简介：该项目共规划两栋高层建筑，基础形式为桩基础,该工程安全等级为II级"
            android:textColor="#848383"
            android:textSize="@dimen/dimen_11sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>