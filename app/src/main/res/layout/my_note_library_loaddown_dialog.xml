<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:gravity="right"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_note_library_loaddown_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/diaglo_delete" />

            <View
                android:id="@+id/view_note_library_loaddown"
                android:layout_width="@dimen/dimen_1dp"
                android:layout_height="@dimen/dimen_43dp"
                android:layout_marginRight="@dimen/dimen_13dp"
                android:background="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_note_library_loaddown"
            android:background="@drawable/shape_my_project_manager_diaglo_bg"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/diaglo_bg"
                android:gravity="center"
                android:paddingBottom="@dimen/dimen_28dp"
                android:paddingTop="@dimen/dimen_28dp"
                android:text="CAD施工详图下载"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_15dp"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_25dp"
                android:text="CAD缩略图"
                android:textColor="#6e6e6e"
                android:textSize="@dimen/dimen_14sp" />

            <ImageView
                android:id="@+id/iv_note_library_loaddown_cadpic"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_130dp"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ar_bg" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:text="下载链接"
                android:textColor="#6e6e6e"
                android:textSize="@dimen/dimen_14sp" />

            <TextView
                android:id="@+id/tv_note_library_loaddown_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:background="@drawable/shape_note_library_loaddown_bg"
                android:paddingBottom="@dimen/dimen_15dp"
                android:paddingLeft="@dimen/dimen_17dp"
                android:paddingRight="@dimen/dimen_17dp"
                android:paddingTop="@dimen/dimen_15dp"
                android:text="http//www.gcyh.com/xxxxxxxxx.cad"
                android:textColor="#6e6e6e"
                android:textSize="@dimen/dimen_14sp" />

            <Button
                android:id="@+id/btn_note_library_loaddown_copy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_25dp"
                android:layout_marginLeft="@dimen/dimen_34dp"
                android:layout_marginRight="@dimen/dimen_34dp"
                android:layout_marginTop="@dimen/dimen_25dp"
                android:paddingTop="@dimen/dimen_10dp"
                android:paddingBottom="@dimen/dimen_10dp"
                android:background="@drawable/shape_login_bg"
                android:text="复制下载链接"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_15sp" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>