<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:id="@+id/view_string"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginBottom="@dimen/dimen_20dp"
        android:background="#ebebeb"
        android:layout_marginLeft="@dimen/dimen_15dp" />

    <com.gcyh.jiedian.widget.CircleImageView
        android:id="@+id/iv_find_details_item1_head"
        android:layout_width="@dimen/dimen_45dp"
        android:layout_height="@dimen/dimen_45dp"
        android:layout_below="@+id/view_string"
        android:layout_marginLeft="@dimen/dimen_15dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/my_head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_string"
        android:layout_marginLeft="@dimen/dimen_8dp"
        android:layout_toRightOf="@+id/iv_find_details_item1_head"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_find_details_item1_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="李玉刚"
                android:textColor="#707070"
                android:textSize="@dimen/dimen_13sp" />

            <TextView
                android:id="@+id/tv_find_details_item1_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_25dp"
                android:text="2018-04-28"
                android:textColor="#b4b3b3"
                android:textSize="@dimen/dimen_10sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_find_details_item1_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_35dp"
            android:layout_marginTop="@dimen/dimen_15dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/money_details"
            android:textColor="#484848"
            android:textSize="@dimen/dimen_12sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_find_details_item1_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="25dp"
                android:gravity="right"
                android:paddingBottom="@dimen/dimen_8dp"
                android:paddingLeft="@dimen/dimen_10dp"
                android:paddingTop="@dimen/dimen_8dp"
                android:text="回复"
                android:textColor="#3a6da5"
                android:textSize="@dimen/dimen_12sp" />

        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>