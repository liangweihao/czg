<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="@dimen/dimen_93dp"
    android:layout_height="@dimen/dimen_95dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/find_popu_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_publish_results"
            android:layout_width="@dimen/dimen_93dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_14sp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:paddingTop="@dimen/dimen_10dp"
            android:paddingBottom="@dimen/dimen_10dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="我要发布"/>

        <View
            android:layout_width="@dimen/dimen_80dp"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_marginRight="@dimen/dimen_15dp"
            android:background="#525154"/>

        <TextView
            android:id="@+id/tv_my_results"
            android:layout_width="@dimen/dimen_93dp"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dimen_10dp"
            android:paddingBottom="@dimen/dimen_10dp"
            android:textSize="@dimen/dimen_14sp"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="我的主题"/>

    </LinearLayout>

</LinearLayout>