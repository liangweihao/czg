<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/dimen_17dp"
    android:paddingLeft="@dimen/dimen_15dp"
    android:paddingRight="@dimen/dimen_15dp"
    android:paddingTop="@dimen/dimen_22dp">


    <ImageView
        android:id="@+id/iv_my_download_finish_item_pic"
        android:layout_width="@dimen/dimen_100dp"
        android:layout_height="@dimen/dimen_70dp"
        android:layout_marginRight="@dimen/dimen_15dp"
        android:scaleType="fitXY"
        android:src="@mipmap/jiedian_item"
        android:background="#f6f6f6"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_my_download_finish_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="石膏板吊顶节点详图"
            android:textColor="#00000c"
            android:textSize="@dimen/dimen_13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_my_download_finish_item_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0.0M"
                android:textColor="#a2a2a2"
                android:layout_weight="1"
                android:textSize="@dimen/dimen_11sp" />

            <TextView
                android:id="@+id/tv_my_download_finish_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_8dp"
                android:drawableLeft="@mipmap/time"
                android:drawablePadding="@dimen/dimen_3dp"
                android:singleLine="true"
                android:text="2018.04.12"
                android:textColor="#a4a4a4"
                android:textSize="@dimen/dimen_11sp" />

        </LinearLayout>




    </LinearLayout>

</LinearLayout>