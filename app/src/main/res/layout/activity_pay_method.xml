<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.gcyh.jiedian.library.activity.PayMethodActivity">

    <include layout="@layout/toolbar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dimen_15sp"
        android:background="@color/white"
        android:paddingLeft="@dimen/dimen_15dp"
        android:paddingTop="@dimen/dimen_15dp"
        android:paddingBottom="@dimen/dimen_15dp"
        android:textColor="#000000"
        android:text="选择支付方式"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="#c8cbd4"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:paddingLeft="@dimen/dimen_20dp"
            android:paddingTop="@dimen/dimen_15dp"
            android:paddingBottom="@dimen/dimen_15dp"
            android:drawablePadding="@dimen/dimen_10dp"
            android:drawableLeft="@mipmap/pay_method_zhifubao"
            android:layout_weight="1"
            android:textSize="@dimen/dimen_14sp"
            android:text="支付宝支付"/>

        <CheckBox
            android:id="@+id/cb_zhifubao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dimen_10dp"
            android:paddingBottom="@dimen/dimen_10dp"
            android:paddingRight="@dimen/dimen_20dp"

            android:checked="true"
            android:button="@drawable/selector_pay_method"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="#c8cbd4"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333333"
            android:paddingLeft="@dimen/dimen_20dp"
            android:paddingTop="@dimen/dimen_15dp"
            android:paddingBottom="@dimen/dimen_15dp"
            android:drawablePadding="@dimen/dimen_10dp"
            android:drawableLeft="@mipmap/pay_method_weixin"
            android:layout_weight="1"
            android:textSize="@dimen/dimen_14sp"
            android:text="微信支付"/>

        <CheckBox
            android:id="@+id/cb_weixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dimen_10dp"
            android:paddingBottom="@dimen/dimen_10dp"
            android:paddingRight="@dimen/dimen_20dp"
            android:button="@drawable/selector_pay_method" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_53dp"
        android:layout_marginRight="@dimen/dimen_53dp"
        android:layout_marginTop="@dimen/dimen_35dp"
        android:background="@drawable/shape_login_bg"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_15sp" />


</LinearLayout>
