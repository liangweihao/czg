<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dimen_15dp"
    android:paddingTop="@dimen/dimen_22dp"
    android:paddingBottom="@dimen/dimen_17dp"
    android:paddingRight="@dimen/dimen_15dp"
    android:background="@color/white"
    android:gravity="center_vertical">


    <ImageView
        android:id="@+id/iv_my_downloading_item_pic"
        android:layout_width="@dimen/dimen_100dp"
        android:layout_height="@dimen/dimen_70dp"
        android:src="@mipmap/jiedian_item"
        android:layout_marginRight="@dimen/dimen_15dp"
        android:background="#f6f6f6"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_my_downloading_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_13sp"
            android:textColor="#00000c"
            android:text="石膏板吊顶节点详图"/>

        <LinearLayout
            android:id="@+id/ll_my_downloading_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_my_downloading_item_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#2391ff"
                android:textSize="@dimen/dimen_11sp"
                android:text="正在下载"/>

            <TextView
                android:id="@+id/tv_my_downloading_item_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#a2a2a2"
                android:textSize="@dimen/dimen_11sp"
                android:gravity="right"
                android:text="48.12M"/>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/rb_my_downloading_item_progress"
            style="@android:style/Widget.Holo.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/progress_download_bg" />

    </LinearLayout>

</LinearLayout>