<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.gcyh.jiedian.my.activity.MyCollectActivity">

    <include layout="@layout/toolbar"/>

    <com.androidkun.xtablayout.XTabLayout
        android:id="@+id/libraryXxTablayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_33dp"
        android:background="@color/white"
        app:xTabDisplayNum="3"
        app:xTabIndicatorColor="@color/color_de171e"
        app:xTabIndicatorHeight="@dimen/dimen_2dp"
        app:xTabIndicatorWidth="@dimen/dimen_100dp"
        app:xTabMode="fixed"
        app:xTabSelectedTextColor="@color/color_de171e"
        app:xTabTextColor="#565656"
        app:xTabSelectedTextSize="@dimen/dimen_14sp"
        app:xTabTextSize="@dimen/dimen_14sp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/libraryViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>
