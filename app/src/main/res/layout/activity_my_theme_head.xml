<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_220dp">

    <ImageView
        android:id="@+id/iv_my_theme_pic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_175dp"
        android:src="@mipmap/my_theme_bg"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginRight="@dimen/dimen_20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:paddingTop="@dimen/dimen_10dp"
        android:paddingBottom="@dimen/dimen_10dp"
        android:paddingLeft="@dimen/dimen_10dp"
        android:orientation="horizontal">

        <com.gcyh.jiedian.widget.CircleImageView
            android:id="@+id/iv_my_theme_head"
            android:layout_width="@dimen/dimen_70dp"
            android:layout_height="@dimen/dimen_70dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/my_head" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_my_theme_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/dimen_15sp" />

                <ImageView
                    android:id="@+id/iv_my_A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:visibility="gone"
                    android:src="@mipmap/vip_a" />

                <ImageView
                    android:id="@+id/iv_my_B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:visibility="gone"
                   android:src="@mipmap/vip_b" />

                <ImageView
                    android:id="@+id/iv_my_S"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:visibility="gone"
                    android:src="@mipmap/vip_s" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_7dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_my_theme_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:src="@mipmap/lv6"/>

                <com.gcyh.jiedian.widget.RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:clickable="false"
                    app:starCount="5"
                    app:starFill="@mipmap/icon_star"
                    app:starImageSize="@dimen/dimen_15sp"
                    app:starPadding="2dp"
                    app:starStep="0"
                    app:stepSize="Full" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>