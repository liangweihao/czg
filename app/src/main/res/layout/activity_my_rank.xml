<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.gcyh.jiedian.my.activity.MyRankActivity">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/my_rank_bg"
                android:gravity="center_vertical|center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_110dp"
                    android:layout_marginTop="@dimen/dimen_50dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/dimen_10dp"
                        android:src="@mipmap/my_rank_back" />

                    <com.gcyh.jiedian.widget.CircleImageView
                        android:id="@+id/iv_my_rank_pic"
                        android:layout_width="@dimen/dimen_80dp"
                        android:layout_height="@dimen/dimen_80dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/my_head" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/dimen_15dp"
                        android:src="@mipmap/my_rank_front" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen_12sp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/dimen_38dp"
                        android:gravity="center"
                        android:text="LV.1"/>

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:gravity="center_vertical|center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_my_rank_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="距离LV.2还差"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen_15sp" />

                    <TextView
                        android:id="@+id/tv_my_rank_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="157"
                        android:textColor="#ffed00"
                        android:textSize="@dimen/dimen_15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="点经验"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen_15sp" />

                </LinearLayout>

                <ProgressBar
                    style="@android:style/Widget.Holo.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_10dp"
                    android:layout_marginBottom="@dimen/dimen_40dp"
                    android:layout_marginLeft="@dimen/dimen_50dp"
                    android:layout_marginRight="@dimen/dimen_50dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:max="100"
                    android:progress="50"
                    android:background="@mipmap/my_rank_progress_bg"
                    android:progressDrawable="@drawable/progress_bg" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical|center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dimen_20dp"
                android:paddingTop="@dimen/dimen_20dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:src="@mipmap/view_left" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:text="等级特权"
                    android:textColor="@color/color_de171e"
                    android:textSize="@dimen/dimen_17sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/view_right" />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical|center"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:paddingTop="@dimen/dimen_23dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/view_left" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:text="升级攻略"
                    android:textColor="@color/color_de171e"
                    android:textSize="@dimen/dimen_17sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/view_right" />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/my_rank_upgrade"
                android:paddingBottom="@dimen/dimen_20dp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
