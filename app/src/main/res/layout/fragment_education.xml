<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/titlebar" />

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_scrollFlags="scroll">

                <ImageView
                    android:id="@+id/iv_education_slideshow"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_180dp"
                    android:scaleType="fitXY" />

            </LinearLayout>

            <com.androidkun.xtablayout.XTabLayout
                android:id="@+id/education_xTablayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40dp"
                app:xTabDisplayNum="3"
                app:xTabDividerColor="#e1e6f0"
                app:xTabDividerHeight="@dimen/dimen_11dp"
                app:xTabDividerWidth="@dimen/dimen_1dp"
                app:xTabIndicatorColor="@color/color_de171e"
                app:xTabIndicatorHeight="@dimen/dimen_2dp"
                app:xTabIndicatorWidth="@dimen/dimen_60dp"
                app:xTabMode="scrollable"
                app:xTabSelectedTextColor="@color/color_de171e"
                app:xTabSelectedTextSize="@dimen/dimen_14sp"
                app:xTabTextColor="#565656"
                app:xTabTextSize="@dimen/dimen_14sp" />

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/educationViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </android.support.design.widget.CoordinatorLayout>

    <LinearLayout
        android:id="@+id/ll_education_null"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_140dp"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/internet_null" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:text="网络不给力，点击重新加载"
            android:textSize="@dimen/dimen_16sp" />


    </LinearLayout>

</LinearLayout>