<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_230dp">

    <ImageView
        android:id="@+id/iv_other_find_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/my_theme_bg"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginRight="@dimen/dimen_20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:paddingTop="@dimen/dimen_10dp"
        android:paddingBottom="@dimen/dimen_10dp"
        android:paddingLeft="@dimen/dimen_10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/shape_theme_head_bg">

            <com.gcyh.jiedian.widget.CircleImageView
                android:id="@+id/iv_other_find_head"
                android:layout_width="@dimen/dimen_67dp"
                android:layout_height="@dimen/dimen_67dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/my_head" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_other_find_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="深化设计师"
                    android:textColor="#202228"
                    android:textSize="@dimen/dimen_15sp" />

                <ImageView
                    android:id="@+id/iv_other_find_A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:src="@mipmap/vip_a" />

                <ImageView
                    android:id="@+id/iv_other_find_B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:src="@mipmap/vip_b" />

                <ImageView
                    android:id="@+id/iv_other_find_S"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:src="@mipmap/vip_s" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_7dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_other_find_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:src="@mipmap/lv3"/>

                <com.gcyh.jiedian.widget.RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:clickable="false"
                    app:starCount="5"
                    app:starFill="@mipmap/icon_star"
                    app:starImageSize="15sp"
                    app:starPadding="2dp"
                    app:starStep="3"
                    app:stepSize="Full" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_other_find_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_18dp"
            android:src="@mipmap/notice"/>

    </LinearLayout>


</RelativeLayout>