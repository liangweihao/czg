<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="@dimen/dimen_1dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/dimen_10dp"
    android:paddingLeft="@dimen/dimen_15dp"
    android:paddingRight="@dimen/dimen_15dp"
    android:paddingTop="@dimen/dimen_10dp">

    <com.gcyh.jiedian.widget.CircleImageView
        android:id="@+id/iv_my_notice_item_head"
        android:layout_width="@dimen/dimen_70dp"
        android:layout_height="@dimen/dimen_70dp"
        android:src="@mipmap/my_head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_my_notice_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="深化设计师"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_15sp" />

            <ImageView
                android:id="@+id/iv_my_notice_item_A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_5dp"
               android:src="@mipmap/vip_a" />

            <ImageView
                android:id="@+id/iv_my_notice_item_B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_5dp"
                android:src="@mipmap/vip_b" />

            <ImageView
                android:id="@+id/iv_my_notice_item_S"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_5dp"
                android:src="@mipmap/vip_s" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_my_notice_item_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_7dp"
                android:src="@mipmap/lv10"/>

            <com.gcyh.jiedian.widget.RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:clickable="false"
                app:starCount="5"
                app:starFill="@mipmap/icon_star"
                app:starImageSize="15dp"
                app:starPadding="1dp"
                app:starStep="5"
                app:stepSize="Full" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_my_notice_item_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/finish_notice" />

</LinearLayout>