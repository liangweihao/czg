<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="@dimen/dimen_30dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/color_00000000"
                android:gravity="center|center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_tv_my_project_manager_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/diaglo_delete" />

                <View
                    android:id="@+id/view_my_project_manager"
                    android:layout_width="@dimen/dimen_1dp"
                    android:layout_height="@dimen/dimen_43dp"
                    android:background="@color/white" />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_my_project_manager_diaglo_bg"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/diaglo_bg"
                android:gravity="center"
                android:paddingBottom="@dimen/dimen_28dp"
                android:paddingTop="@dimen/dimen_28dp"
                android:text="添加项目"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_20sp" />

            <LinearLayout
                android:id="@+id/ll_my_project_manager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_23dp"
                android:layout_marginRight="@dimen/dimen_23dp"
                android:layout_marginTop="@dimen/dimen_40dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/my_project_manager_bg_no"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/dimen_14dp"
                        android:paddingLeft="@dimen/dimen_14dp"
                        android:paddingRight="@dimen/dimen_14dp"
                        android:paddingTop="@dimen/dimen_14dp"
                        android:text="项目编号"
                        android:textColor="#6d6d6d"
                        android:textSize="@dimen/dimen_13sp" />

                    <View
                        android:layout_width="@dimen/dimen_1dp"
                        android:layout_height="@dimen/dimen_21dp"
                        android:layout_marginLeft="@dimen/dimen_10dp"
                        android:layout_marginRight="@dimen/dimen_10dp"
                        android:background="@color/color_d6d6d6" />

                    <EditText
                        android:id="@+id/et_my_project_manager_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="请输入正确的项目编号"
                        android:inputType="number"
                        android:paddingBottom="@dimen/dimen_14dp"
                        android:paddingLeft="@dimen/dimen_14dp"
                        android:paddingRight="@dimen/dimen_14dp"
                        android:paddingTop="@dimen/dimen_14dp"
                        android:textColor="#b2b2b2"
                        android:textSize="@dimen/dimen_11sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_my_project_manager_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_16dp"
                    android:layout_marginRight="@dimen/dimen_50dp"
                    android:layout_marginTop="@dimen/dimen_45dp"
                    android:ellipsize="end"
                    android:maxLines="4"
                    android:text="项目名称：天津假日酒店样板房\n项目简介：该项目是由北京共呈壹合建筑设计院北京共呈壹合建筑设计院设计的设计的北京共呈壹合建筑设计院设计的北京共呈壹合建筑设计院设计的北京共呈壹合建筑设计院设计的"
                    android:textColor="#6d6d6d"
                    android:textSize="@dimen/dimen_11sp"
                    android:visibility="gone" />


            </LinearLayout>

            <TextView
                android:id="@+id/tv_my_project_manager_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_23dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:text="请输入正确的项目编号"
                android:textColor="@color/color_de171e"
                android:textSize="@dimen/dimen_9sp"
                android:visibility="gone" />


            <Button
                android:id="@+id/btn_my_project_manager_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_40dp"
                android:layout_marginLeft="@dimen/dimen_40dp"
                android:layout_marginRight="@dimen/dimen_40dp"
                android:layout_marginTop="@dimen/dimen_30dp"
                android:background="@drawable/shape_login_bg"
                android:text="添加"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_15sp" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>