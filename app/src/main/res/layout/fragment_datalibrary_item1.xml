<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dimen_5dp"
    android:paddingRight="@dimen/dimen_10dp"
    android:paddingTop="@dimen/dimen_10dp">

    <ImageView
        android:id="@+id/iv_datalibrary_item1_pic"
        android:layout_width="@dimen/dimen_104dp"
        android:layout_height="@dimen/dimen_72dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/library_data_item" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15dp"
        android:layout_marginRight="@dimen/dimen_5dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_datalibrary_item1_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="天津高铁站月台设计"
                android:textColor="#00000c"
                android:textSize="@dimen/dimen_13sp" />

            <ImageView
                android:id="@+id/iv_datalibrary_item1_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/heart"/>



        </LinearLayout>



        <TextView
            android:id="@+id/tv_datalibrary_item1_title_english"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="Tianjin rail station platform architecturel"
            android:textColor="#848383"
            android:textSize="@dimen/dimen_11sp" />

        <TextView
            android:id="@+id/tv_datalibrary_item1_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="项目简介：该项目共规划两栋高层建筑，基础形式为桩基础,该工程安全等级为II级"
            android:textColor="#848383"
            android:textSize="@dimen/dimen_11sp" />


        <TextView
            android:id="@+id/tv_datalibrary_item1_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/dimen_8dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:drawableLeft="@mipmap/time"
            android:drawablePadding="@dimen/dimen_3dp"
            android:gravity="right"
            android:text="2018.04.20"
            android:textColor="#a4a4a4"
            android:textSize="@dimen/dimen_12sp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/color_d6d6d6" />

    </LinearLayout>

</LinearLayout>