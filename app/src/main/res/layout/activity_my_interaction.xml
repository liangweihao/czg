<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.gcyh.jiedian.my.activity.MyInteractionActivity">

    <include layout="@layout/toolbar" />

    <com.androidkun.xtablayout.XTabLayout
        android:id="@+id/myZanxTablayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_33dp"
        android:background="@color/white"
        app:xTabDisplayNum="4"
        app:xTabIndicatorColor="@color/color_de171e"
        app:xTabIndicatorHeight="@dimen/dimen_2dp"
        app:xTabIndicatorWidth="@dimen/dimen_70dp"
        app:xTabMode="fixed"
        app:xTabSelectedTextColor="@color/color_de171e"
        app:xTabSelectedTextSize="@dimen/dimen_14sp"
        app:xTabTextColor="#565656"
        app:xTabTextSize="@dimen/dimen_14sp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/myZanViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
