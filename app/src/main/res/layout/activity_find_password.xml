<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.gcyh.jiedian.entrance.FindPasswordActivity">

    <include layout="@layout/toolbar"/>

    <EditText
        android:id="@+id/et_find_password_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_15dp"
        android:layout_marginLeft="@dimen/dimen_23dp"
        android:layout_marginRight="@dimen/dimen_23dp"
        android:layout_marginTop="@dimen/dimen_25dp"
        android:background="@null"
        android:hint="请输入手机号"
        android:inputType="phone"
        android:drawableLeft="@mipmap/login_star"
        android:drawablePadding="@dimen/dimen_3dp"
        android:textSize="@dimen/dimen_13sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginRight="@dimen/dimen_20dp"
        android:background="#cccccc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_15dp"
        android:layout_marginLeft="@dimen/dimen_23dp"
        android:layout_marginRight="@dimen/dimen_23dp"
        android:layout_marginTop="@dimen/dimen_25dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_find_password_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawableLeft="@mipmap/login_star"
            android:drawablePadding="@dimen/dimen_3dp"
            android:inputType="number"
            android:hint="请输入验证码"
            android:textSize="@dimen/dimen_13sp" />

        <TextView
            android:id="@+id/tv_find_password_send_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_register_send_code_bg"
            android:paddingBottom="@dimen/dimen_5dp"
            android:paddingLeft="@dimen/dimen_10dp"
            android:paddingRight="@dimen/dimen_10dp"
            android:paddingTop="@dimen/dimen_5dp"
            android:text="获取验证码"
            android:textSize="@dimen/dimen_10sp"
            android:textColor="@color/white" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginRight="@dimen/dimen_20dp"
        android:background="#cccccc" />

    <EditText
        android:id="@+id/et_find_password_new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_15dp"
        android:layout_marginLeft="@dimen/dimen_23dp"
        android:layout_marginRight="@dimen/dimen_23dp"
        android:layout_marginTop="@dimen/dimen_25dp"
        android:background="@null"
        android:drawableLeft="@mipmap/login_star"
        android:drawablePadding="@dimen/dimen_3dp"
        android:inputType="textPassword"
        android:hint="请输入新密码(6-12位数字、字母组合)"
        android:textSize="@dimen/dimen_13sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginRight="@dimen/dimen_20dp"
        android:background="#cccccc" />

    <EditText
        android:id="@+id/et_find_password_next_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_15dp"
        android:layout_marginLeft="@dimen/dimen_23dp"
        android:layout_marginRight="@dimen/dimen_23dp"
        android:layout_marginTop="@dimen/dimen_25dp"
        android:background="@null"
        android:drawableLeft="@mipmap/login_star"
        android:drawablePadding="@dimen/dimen_3dp"
        android:inputType="textPassword"
        android:hint="再次输入密码"
        android:textSize="@dimen/dimen_13sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginRight="@dimen/dimen_20dp"
        android:background="#cccccc" />

    <Button
        android:id="@+id/btn_find_password_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_53dp"
        android:layout_marginRight="@dimen/dimen_53dp"
        android:layout_marginTop="@dimen/dimen_35dp"
        android:background="@drawable/shape_login_bg"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_15sp" />

</LinearLayout>
