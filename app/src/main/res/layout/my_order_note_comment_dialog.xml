<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|center_vertical"
            android:background="@color/color_00000000"
            android:paddingLeft="@dimen/dimen_200dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_order_note_comment_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/diaglo_delete"/>

            <View
                android:id="@+id/view_my_project_manager"
                android:layout_width="@dimen/dimen_1dp"
                android:layout_height="@dimen/dimen_43dp"
                android:background="@color/white"
                android:layout_below="@+id/iv_order_note_comment_delete"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_my_project_manager"
            android:background="@drawable/shape_my_project_manager_diaglo_bg"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/diaglo_bg"
                android:gravity="center"
                android:paddingBottom="@dimen/dimen_28dp"
                android:paddingTop="@dimen/dimen_28dp"
                android:text="节点评分"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_20sp" />


            <com.gcyh.jiedian.widget.RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_30dp"
                android:gravity="center"
                app:starCount="5"
                app:starFill="@mipmap/comment_big_star_select"
                app:starEmpty="@mipmap/comment_big_star_normal"
                app:starImageSize="26dp"
                app:starPadding="6dp"
                app:starStep="0"
                app:stepSize="Full" />

            <TextView
                android:id="@+id/tv_my_project_manager_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:gravity="center"
                android:text="你在五星点赞，我在继续加班！"
                android:textColor="#c3c7ca"
                android:textSize="@dimen/dimen_13sp" />

            <Button
                android:id="@+id/btn_order_note_comment_commit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_15sp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginBottom="@dimen/dimen_40dp"
                android:layout_marginLeft="@dimen/dimen_40dp"
                android:layout_marginRight="@dimen/dimen_40dp"
                android:background="@drawable/shape_login_bg"
                android:textColor="@color/white"
                android:text="提交"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>