<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    tools:context="com.gcyh.jiedian.my.activity.MoneyDetailsActivity">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15dp"
        android:layout_marginRight="@dimen/dimen_15dp"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:layout_marginBottom="@dimen/dimen_15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_money_details_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_14sp"
            android:layout_weight="1"
            android:textColor="#787878"
            android:text="出账线币"/>

        <TextView
            android:id="@+id/tv_money_details_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_18sp"
            android:textColor="#333333"
            android:text="50个"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginLeft="@dimen/dimen_15dp"
        android:layout_marginRight="@dimen/dimen_15dp"
        android:background="#ebebeb"/>

    <LinearLayout
        android:id="@+id/ll_money_details_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15dp"
        android:layout_marginRight="@dimen/dimen_15dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_money_details_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_14sp"
            android:textColor="#787878"
            android:layout_weight="1"
            android:text="类型"/>

        <TextView
            android:id="@+id/tv_money_details_type_contet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_14sp"
            android:textColor="#787878"
            android:text="消费"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_money_details_ziyuan_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15dp"
        android:layout_marginRight="@dimen/dimen_15dp"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_money_details_ziyuan_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_14sp"
            android:textColor="#787878"
            android:layout_weight="1"
            android:text="资源类型"/>

        <TextView
            android:id="@+id/tv_money_details_ziyuan_type_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_14sp"
            android:textColor="#787878"
            android:text="节点项目"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_money_details_buy_tiem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15dp"
        android:layout_marginRight="@dimen/dimen_15dp"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_money_details_buy_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_14sp"
            android:textColor="#787878"
            android:layout_weight="1"
            android:text="购买时间"/>

        <TextView
            android:id="@+id/tv_money_details_buy_time_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_14sp"
            android:textColor="#787878"
            android:text="2018-04-03 15:03:30"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_money_details_bianhao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15dp"
        android:layout_marginRight="@dimen/dimen_15dp"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:layout_marginBottom="@dimen/dimen_20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_money_details_bianhao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_14sp"
            android:textColor="#787878"
            android:layout_weight="1"
            android:text="编号"/>

        <TextView
            android:id="@+id/tv_money_details_bianhao_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_14sp"
            android:textColor="#787878"
            android:text="123456789123456789"/>

    </LinearLayout>

</LinearLayout>
