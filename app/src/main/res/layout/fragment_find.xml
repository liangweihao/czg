<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <include layout="@layout/titlebar"/>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_find_time"
            style="@style/radioButton"
            android:text="时间"
            android:textSize="@dimen/dimen_14sp" />

        <View
            android:layout_width="@dimen/dimen_1dp"
            android:layout_height="@dimen/dimen_11dp"
            android:background="#e1e6f0"/>

        <RadioButton
            android:id="@+id/rb_find_hot"
            style="@style/radioButton"
            android:text="热门"
            android:textSize="@dimen/dimen_14sp" />

        <View
            android:layout_width="@dimen/dimen_1dp"
            android:layout_height="@dimen/dimen_11dp"
            android:background="#e1e6f0"/>

        <RadioButton
            android:id="@+id/rb_find_profession"
            style="@style/radioButton"
            android:text="专业性"
            android:textSize="@dimen/dimen_14sp" />

        <View
            android:layout_width="@dimen/dimen_1dp"
            android:layout_height="@dimen/dimen_11dp"
            android:background="#e1e6f0"/>

        <RadioButton
            android:id="@+id/rb_find_process"
            style="@style/radioButton"
            android:text="过程中"
            android:textSize="@dimen/dimen_14sp" />

        <View
            android:layout_width="@dimen/dimen_1dp"
            android:layout_height="@dimen/dimen_11dp"
            android:background="#e1e6f0"/>

        <RadioButton
            android:id="@+id/rb_find_finish"
            style="@style/radioButton"
            android:text="成品"
            android:textSize="@dimen/dimen_14sp" />

    </RadioGroup>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/smart_refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srlHeaderMaxDragRate="5"
        app:srlHeaderHeight="40dp"
        app:srlFooterHeight="40dp"
        app:srlFooterMaxDragRate="5"
        app:srlAccentColor="@color/color_333333"
        app:srlPrimaryColor="@color/white">

        <com.scwang.smartrefresh.header.CircleHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycleViewFind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:background="#f9f9f9"/>

        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <LinearLayout
        android:id="@+id/ll_find_null"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_140dp"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/internet_null" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:text="网络不给力，点击重新加载"
            android:textSize="@dimen/dimen_16sp" />


    </LinearLayout>

</LinearLayout>