<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dimen_15dp"
    android:layout_marginRight="@dimen/dimen_15dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/dimen_18dp"
        android:paddingBottom="@dimen/dimen_18dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_money_details_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="现金充值"
                android:textColor="#505050"
                android:textSize="@dimen/dimen_14sp" />

            <TextView
                android:id="@+id/tv_money_details_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_money_details_type"
                android:layout_marginTop="@dimen/dimen_9dp"
                android:text="2018-04-24 09:56:30"
                android:textColor="#7b7b7b"
                android:textSize="@dimen/dimen_12sp" />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_money_details_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+500个"
            android:textColor="#555555"
            android:textSize="@dimen/dimen_18sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@color/color_d6d6d6" />


</LinearLayout>