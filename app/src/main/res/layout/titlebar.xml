<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/titlebar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_44dp"
    android:background="@color/color_333333"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_titlebar_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/filter" />

    <RelativeLayout
        android:id="@+id/rl_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/color_333333"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_title_search_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_titlebar_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:src="@mipmap/search" />

            <EditText
                android:id="@+id/et_titlebar_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_7dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint=""
                android:maxLength="20"
                android:paddingBottom="@dimen/dimen_5dp"
                android:paddingTop="@dimen/dimen_5dp"
                android:singleLine="true"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_13sp" />

            <ImageView
                android:id="@+id/iv_titlebar_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:src="@mipmap/delete" />

        </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_titlebar_jia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/jia" />


</LinearLayout>