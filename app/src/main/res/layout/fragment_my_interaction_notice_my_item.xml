<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_10dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dimen_15dp"
    android:paddingLeft="@dimen/dimen_15dp"
    android:paddingRight="@dimen/dimen_15dp"
    android:paddingTop="@dimen/dimen_15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.gcyh.jiedian.widget.CircleImageView
            android:id="@+id/iv_my_interaction_notice_my_item_head"
            android:layout_width="@dimen/dimen_40dp"
            android:layout_height="@dimen/dimen_40dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/my_head" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_my_interaction_notice_my_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="罗代玉"
                android:textColor="#1b1b1b"
                android:textSize="@dimen/dimen_15sp" />

            <TextView
                android:id="@+id/tv_my_interaction_notice_my_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_3dp"
                android:text="18小时前"
                android:textColor="#b4b3b3"
                android:textSize="@dimen/dimen_11sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_my_interaction_notice_my_item_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_5dp"
            android:text="回复"
            android:textColor="#3a6da5"
            android:textSize="@dimen/dimen_13sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_my_interaction_notice_my_item_my"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" @我："
            android:textColor="#3a6da5"
            android:textSize="@dimen/dimen_13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_my_interaction_notice_my_item_return_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我就是我，不一样的人生,霸气的人生不需要解释,相思无用，唯别而已......"
                android:textColor="#202228"
                android:textSize="@dimen/dimen_13sp" />

            <ImageView
                android:id="@+id/iv_my_interaction_notice_my_item_return_zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_3dp"
                android:src="@mipmap/zan_select"
                android:visibility="gone"/>
        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_my_interaction_notice_my_item_pic"
            android:layout_width="@dimen/dimen_70dp"
            android:layout_height="@dimen/dimen_70dp"
            android:background="@color/white"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_my_interaction_notice_my_item_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_70dp"
            android:background="@color/color_f7f7f7"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingBottom="@dimen/dimen_15dp"
            android:paddingLeft="@dimen/dimen_10dp"
            android:paddingTop="@dimen/dimen_15dp"
            android:text="在施工过程中我一直以积极地心态对待我的工地心态对待我的工作，一直以积极地心态对待我的工作"
            android:textColor="#202228" />

    </LinearLayout>

</LinearLayout>