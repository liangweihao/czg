<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f9f9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_datalibrary_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dimen_8dp"
            android:paddingBottom="@dimen/dimen_8dp"
            android:layout_weight="1"
            android:gravity="center|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_datalibrary_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="规范"
                android:textColor="@color/color_323232"
                android:textSize="@dimen/dimen_14sp" />

            <ImageView
                android:id="@+id/iv_datalibrary_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_2dp"
                android:src="@mipmap/triangle_normal" />

        </LinearLayout>

        <View
            android:layout_width="@dimen/dimen_1dp"
            android:layout_height="@dimen/dimen_11dp"
            android:background="#e1e6f0" />

        <LinearLayout
            android:id="@+id/ll_datalibrary_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dimen_8dp"
            android:paddingBottom="@dimen/dimen_8dp"
            android:layout_weight="1"
            android:gravity="center|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_datalibrary_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="数据"
                android:textColor="@color/color_323232"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/iv_datalibrary_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_2dp"
                android:src="@mipmap/triangle_normal"/>

        </LinearLayout>

        <View
            android:layout_width="@dimen/dimen_1dp"
            android:layout_height="@dimen/dimen_11dp"
            android:background="#e1e6f0" />

        <LinearLayout
            android:id="@+id/ll_datalibrary_material"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dimen_8dp"
            android:paddingBottom="@dimen/dimen_8dp"
            android:layout_weight="1"
            android:gravity="center|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_datalibrary_material"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="材料用量"
                android:textColor="@color/color_323232"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/iv_datalibrary_material"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_2dp"
                android:src="@mipmap/triangle_normal"/>

        </LinearLayout>

        <View
            android:layout_width="@dimen/dimen_1dp"
            android:layout_height="@dimen/dimen_11dp"
            android:background="#e1e6f0" />

        <LinearLayout
            android:id="@+id/ll_datalibrary_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dimen_8dp"
            android:paddingBottom="@dimen/dimen_8dp"
            android:layout_weight="1"
            android:gravity="center|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_datalibrary_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="图例代号"
                android:textColor="@color/color_323232"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/iv_datalibrary_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_2dp"
                android:src="@mipmap/triangle_normal" />

        </LinearLayout>



    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_13dp"
        android:visibility="gone"/>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/smart_refresh_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srlHeaderMaxDragRate="5"
        app:srlHeaderHeight="40dp"
        app:srlFooterHeight="40dp"
        app:srlFooterMaxDragRate="5"
        app:srlAccentColor="@color/color_333333"
        app:srlPrimaryColor="@color/white">

        <com.scwang.smartrefresh.header.CircleHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycleViewDataLibraryItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:background="@color/white"/>

        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <LinearLayout
        android:id="@+id/ll_datalibrary_null"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_140dp"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/internet_null" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:text="网络不给力，点击重新加载"
            android:textSize="@dimen/dimen_16sp" />


    </LinearLayout>


</LinearLayout>