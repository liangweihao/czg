<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--未登录时显示-->
    <LinearLayout
        android:id="@+id/ll_my_information"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_150dp"
        android:layout_gravity="center"
        android:background="@color/color_333333"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/dimen_15dp"
            android:background="@drawable/shape_head_bg">

            <com.gcyh.jiedian.widget.CircleImageView
                android:id="@+id/iv_my_head"
                android:layout_width="@dimen/dimen_67dp"
                android:layout_height="@dimen/dimen_67dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/my_head" />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_loginorname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/color_333333"
            android:gravity="center"
            android:paddingBottom="@dimen/dimen_15dp"
            android:paddingLeft="@dimen/dimen_15dp"
            android:paddingRight="@dimen/dimen_15dp"
            android:paddingTop="@dimen/dimen_15dp"
            android:text="立即登录"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_15sp" />

    </LinearLayout>

    <!--登录后显示-->
    <LinearLayout
        android:id="@+id/ll_my_login_information"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_150dp"
        android:layout_gravity="center"
        android:background="@color/color_333333"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_15dp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/shape_login_head_bg">

            <com.gcyh.jiedian.widget.CircleImageView
                android:id="@+id/iv_my_login_head"
                android:layout_width="@dimen/dimen_67dp"
                android:layout_height="@dimen/dimen_67dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/my_head" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rl_my_login_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_my_login_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_15sp" />

                <ImageView
                    android:id="@+id/iv_my_A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:src="@mipmap/vip_a"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_my_B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:src="@mipmap/vip_b"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_my_S"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:src="@mipmap/vip_s"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_my_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_5dp"
                    android:src="@mipmap/lv10" />

                <com.gcyh.jiedian.widget.RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:clickable="false"
                    app:starCount="5"
                    app:starFill="@mipmap/icon_star"
                    app:starImageSize="13dp"
                    app:starPadding="3dp"
                    app:starStep="0"
                    app:stepSize="Full" />

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/dimen_10dp"
            android:paddingBottom="@dimen/dimen_10dp"
            android:gravity="center_vertical|top">

            <RelativeLayout
                android:id="@+id/rl_my_login_shop_car"
                android:layout_width="@dimen/dimen_25dp"
                android:layout_height="@dimen/dimen_25dp">

                <ImageView
                    android:id="@+id/iv_my_login_shop_car"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/my_shop_car_select" />

                <TextView
                    android:id="@+id/tv_my_login_shop_car_number"
                    android:layout_width="@dimen/dimen_13dp"
                    android:layout_height="@dimen/dimen_13dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/dimen_3dp"
                    android:background="@drawable/shape_my_shop_car_circle_bg"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="@color/color_de171e"
                    android:textSize="@dimen/dimen_9sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/rl_my_login_shop_car"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_my_login_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginRight="@dimen/dimen_13dp"
                    android:src="@mipmap/my_sign_no" />

                <TextView
                    android:id="@+id/tv_my_login_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/dimen_3dp"
                    android:layout_centerInParent="true"
                    android:textSize="@dimen/dimen_10sp"
                    android:textColor="@color/color_de171e"
                    android:text="+3"/>

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

    <!--登录后显示-->
    <LinearLayout
        android:id="@+id/ll_my_login_collect_notice_fans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/ll_my_login_collect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dimen_14dp"
            android:paddingTop="@dimen/dimen_20dp">

            <TextView
                android:id="@+id/tv_my_login_collect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="110"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_19sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_2dp"
                android:gravity="center"
                android:text="收藏"
                android:textSize="@dimen/dimen_12sp" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/dimen_1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:background="@color/color_d6d6d6" />

        <LinearLayout
            android:id="@+id/ll_my_login_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dimen_14dp"
            android:paddingTop="@dimen/dimen_20dp">

            <TextView
                android:id="@+id/tv_my_login_notice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="10"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_19sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_2dp"
                android:gravity="center"
                android:text="关注"
                android:textSize="@dimen/dimen_12sp" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/dimen_1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:background="@color/color_d6d6d6" />

        <LinearLayout
            android:id="@+id/ll_my_login_fans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dimen_14dp"
            android:paddingTop="@dimen/dimen_20dp">

            <TextView
                android:id="@+id/tv_my_login_fans"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1100"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_19sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_2dp"
                android:gravity="center"
                android:text="粉丝"
                android:textSize="@dimen/dimen_12sp" />
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_my_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dimen_15dp"
                android:paddingLeft="@dimen/dimen_15dp"
                android:paddingRight="@dimen/dimen_15dp"
                android:paddingTop="@dimen/dimen_15dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/my_order" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:layout_weight="1"
                    android:text="我的订单"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/dimen_15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/next" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/dimen_45dp"
                    android:layout_height="@dimen/dimen_1dp"
                    android:background="@color/white" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1dp"
                    android:background="#ebebeb" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_my_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dimen_15dp"
                android:paddingLeft="@dimen/dimen_15dp"
                android:paddingRight="@dimen/dimen_15dp"
                android:paddingTop="@dimen/dimen_15dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/my_money" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:layout_weight="1"
                    android:text="我的线币"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/dimen_15sp" />

                <TextView
                    android:id="@+id/tv_my_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:text="1300线币"
                    android:textColor="@color/color_de171e"
                    android:textSize="@dimen/dimen_15sp" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/next" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/dimen_45dp"
                    android:layout_height="@dimen/dimen_1dp"
                    android:background="@color/white" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1dp"
                    android:background="#ebebeb" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_my_charge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dimen_15dp"
                android:paddingLeft="@dimen/dimen_15dp"
                android:paddingRight="@dimen/dimen_15dp"
                android:paddingTop="@dimen/dimen_15dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/my_charge" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:layout_weight="1"
                    android:text="我要充值"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/dimen_15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/next" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_my_rank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_11dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dimen_15dp"
                android:paddingLeft="@dimen/dimen_15dp"
                android:paddingRight="@dimen/dimen_15dp"
                android:paddingTop="@dimen/dimen_15dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/my_rank" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:layout_weight="1"
                    android:text="我的等级"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/dimen_15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/next" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/dimen_45dp"
                    android:layout_height="@dimen/dimen_1dp"
                    android:background="@color/white" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1dp"
                    android:background="#ebebeb" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_my_interaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dimen_15dp"
                android:paddingLeft="@dimen/dimen_15dp"
                android:paddingRight="@dimen/dimen_15dp"
                android:paddingTop="@dimen/dimen_15dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/my_interaction" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:layout_weight="1"
                    android:text="我的互动"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/dimen_15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/next" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/dimen_45dp"
                    android:layout_height="@dimen/dimen_1dp"
                    android:background="@color/white" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1dp"
                    android:background="#ebebeb" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_my_theme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dimen_15dp"
                android:paddingLeft="@dimen/dimen_15dp"
                android:paddingRight="@dimen/dimen_15dp"
                android:paddingTop="@dimen/dimen_15dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/my_theme" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:layout_weight="1"
                    android:text="我的主题"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/dimen_15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/next" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_my_download"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_11dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dimen_15dp"
                android:paddingLeft="@dimen/dimen_15dp"
                android:paddingRight="@dimen/dimen_15dp"
                android:paddingTop="@dimen/dimen_15dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/my_download" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:layout_weight="1"
                    android:text="下载管理"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/dimen_15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/next" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/dimen_45dp"
                    android:layout_height="@dimen/dimen_1dp"
                    android:background="@color/white" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1dp"
                    android:background="#ebebeb" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_my_project_manager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dimen_15dp"
                android:paddingLeft="@dimen/dimen_15dp"
                android:paddingRight="@dimen/dimen_15dp"
                android:paddingTop="@dimen/dimen_15dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/my_project_manager" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:layout_weight="1"
                    android:text="项目管理"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/dimen_15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/next" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_my_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_60dp"
                android:layout_marginTop="@dimen/dimen_11dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dimen_15dp"
                android:paddingLeft="@dimen/dimen_15dp"
                android:paddingRight="@dimen/dimen_15dp"
                android:paddingTop="@dimen/dimen_15dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/my_setting" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:layout_weight="1"
                    android:text="设置"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/dimen_15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/next" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>


